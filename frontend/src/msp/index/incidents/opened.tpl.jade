include /lib/mixins/list
.datalist
  +toolbar
    +button_group
        +tool_button("incidentsTable.reload()", "refresh", "", "*", "", "")
    +button_group
        +tool_button("actionService.gotoState('incidents.create')", "plus", "新建", "*", "", "")
        +tool_button("actionService.gotoState('incidents.action')", "pencil", "处理", "1", "", "editable")
    +more_buttons
        +drop_button("actionService.perform(destroy)", "trash", "删除", "1+", "", "deletable")
  +page_table("incidentsTable","selection")
    +row("incident", "mspInstanceId", "selection")(class="editable deletable")
        td(data-title="'故障单号'")
            a(ui-sref="incidents.view(incident)"){{incident.number}}
        td(data-title="'实例ID'") {{incident.mspInstanceId}}
        td(data-title="'请求人'") {{incident.requesterName}}
        td(data-title="'分类'") {{incident.category}}
        td(data-title="'优先级'") {{incident.priority}}
        td(data-title="'故障描述'") {{incident.requestDescription}}
        td(data-title="'状态'") {{incident.mspStatus | formatIncidentStatus}}
        td(data-title="'创建时间'") {{incident.createdAt | formatTime}}
        td(data-title="'用户'") {{incident.msuAccountName}}
        td(data-title="'用户状态'") {{incident.msuStatus | formatIncidentStatus}}
                