//   detail work_time
doctype html
.row(ng-controller="WorkTimeNewCtrl")
  form.form-horizontal(name="workForm", novalidate, role="form")
    .form-group
      label.col-xs-12.col-sm-3.control-label.no-padding-right(for="workdates") 工作日：
      .col-xs-12.col-sm-5
        .row
           .col-xs-12
             span(ng-repeat="workdate in workdates")
               input(type="checkbox" ,id="{{workdate.id}}",ng-checked="selection.indexOf(workdate.name)>-1",ng-click="toggleSelection(workdate.name)")
               span {{workdate.name}}
    .form-group
      label.col-xs-12.col-sm-3.control-label.no-padding-right(for="worktimes") 工作时间：
      .col-xs-12.col-sm-5
        span.input-icon
           input.form-control(id="worktime_startAt", name="worktime_startAt", ng-model="worktime.startAt",type="type" ,ng-pattern="/^([0-9]|[2][0-3]|[1][0-9]):[0-5][0-9]$/")
           i.icon-time
        span.input-icon.input-icon-right
          input.form-control(id="worktime_endAt", name="worktime_endAt", ng-model="worktime.endAt",type="type",ng-pattern="/^([0-9]|[2][0-3]|[1][0-9]):[0-5][0-9]$/",ng-blur="checkTime()")
          i.icon-time
      .help-block.col-xs-12.col-sm-reset.inline #{tip}
    .form-group
      label.col-xs-12.col-sm-3.control-label.no-padding-right(for="_description") 描述：
      .col-xs-12.col-sm-5
        span.block.input-icon.input-icon-right
          textarea.form-control.limited(name="worktime_description", ng-model='worktime.description', ng-maxlength="100", placeholder="描述文本")
             i.icon-edit
      .help-block.col-xs-12.col-sm-reset.inline #{tip}
    .row-fluid.actions
      .col-xs-12.col-sm-3
      .col-xs-12.col-sm-5
        button.btn.btn-sm.btn-primary(ng-click="changeWorkTime()")
          i.icon-ok
          | 保存
        button.btn.btn-sm.btn-primary(type="reset")
          i.icon-ok
          | 重置

