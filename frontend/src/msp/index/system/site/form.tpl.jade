.col-xs-12.col-sm-4
    .widget-box
        .widget-header
            h4
            span.widget-toolbar
                a(href='', data-action='collapse')
                    i.icon-chevron-up
                a(href='', data-action='close')
                    i.icon-remove
        .widget-body
            .widget-main(ng-controller='SiteCtrl')
                form(novalidate="novalidate", role='form', name='siteForm', ng-submit='submit(site)')
                    .row
                        .col-xs-6
                            div
                                label(for='form-field-mask-1')
                                    | 地点名称
                                .input-group
                                    input#form-field-mask-1.form-control(type='text', ng-model='site.name', name='titleRepeat', required)
                        .col-xs-6
                            div
                                label(for='form-field-select-1') 区域
                                select#form-field-select-1.form-control(
                                    ng-model='dictionary',
                                    ng-options="dictionary.display for dictionary in dictionaries",
                                    required)
                    hr
                    div
                        label(for='form-field-8') 地址
                        textarea#form-field-8.form-control.limited(
                            ng-model='site.address',
                            ng-maxlength="100",
                            required)
                    hr
                    div
                        label(for='form-field-9') 描述
                        textarea#form-field-9.form-control.limited(
                            ng-model='site.description',
                            ng-maxlength="100")
                    hr
                    div
                        label(for='form-field-select-2') 工作时间
                        select#form-field-select-2.form-control(
                        ng-model='workTime',
                        ng-options="(workTime.name+' '+workTime.startAt+'-'+workTime.endAt) for workTime in workTimes",
                        required)
                    div.form-actions.center
                        button.btn.btn-sm.btn-success(type='submit')
                            | 提交
                            i.icon-arrow-right.icon-on-right.bigger-110