include /lib/mixins/list

.datalist
  +toolbar
    +button_group
      +tool_button("sitesTable.reload()", "refresh", "", "*", "", "")
    +button_group
      +tool_button("actionService.gotoState('sites.new')", "plus", "新增", "*", "", "")
      +tool_button("actionService.gotoState('sites.edit')", "pencil", "修改", "1", "", "editable")
    +more_buttons
      +drop_button("actionService.perform(destroy)", "trash", "删除", "1+", "", "deletable")

  +page_table("sitesTable","selection")
    +row("site", "sn", "selection")(class="editable deletable")
      td(data-title="'地点名称'")
        a(ui-sref="sites.view(site)") {{site.name}}
      td(data-title="'地址'") {{site.address}}
      td(data-title="'区域'") {{site.dictionary.display}}
      td(data-title="'工作时间'") {{ site.workTime.startAt}} - {{ site.workTime.endAt}}
      td(data-title="'描述'") {{site.description}}
