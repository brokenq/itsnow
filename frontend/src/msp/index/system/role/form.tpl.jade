.col-xs-12.col-sm-4
    .widget-box
        .widget-header
            h4
            span.widget-toolbar
                a(href='', data-action='collapse')
                    i.icon-chevron-up
                a(href='', data-action='close')
                    i.icon-remove
        .widget-body
            .widget-main
                ng-form(ng-controller='RoleCtrl', role='form', name='newRoleForm')
                    div
                        label(for='form-field-mask-1')
                            | 角色名称
                        .input-group
                            input#form-field-mask-1.form-control(type='text',ng-model='role.name')
                    hr
                    div
                        label(for='form-field-9') 描述
                        textarea#form-field-9.form-control.limited(maxlength='50',ng-model='role.description')
                    hr
                    label(for='form-field-select-2') 用户（可多选）
                    div(multi-select
                        input-model="users"
                        button-label="username"
                        item-label="username"
                        tick-property="ticked")
                    hr
                    div.form-actions.center
                        button.btn.btn-sm.btn-success(ng-click='submit(role)', type='submit')
                            | 提交
                            i.icon-arrow-right.icon-on-right.bigger-110