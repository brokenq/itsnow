include /lib/mixins/list

.datalist
  +toolbar
    +button_group
      +tool_button("workflowsTable.reload()", "refresh", "", "*", "", "")
    +button_group
      +tool_button("actionService.gotoState('workflows.new')", "plus", "新增", "*", "", "")
      +tool_button("actionService.gotoState('workflows.edit')", "pencil", "修改", "1", "", "editable")
    +more_buttons
      +drop_button("actionService.perform(destroy)", "trash", "删除", "1+", "", "deletable")

  +page_table("workflowsTable","selection")
    +row("workflow", "sn", "selection")(class="editable deletable")
      td(data-title="'名称'")
        a(ui-sref="workflows.view(workflow)") {{workflow.name}}
      td(data-title="'类型'") {{workflow.dictionary.display}}
      td(data-title="'描述'") {{workflow.description}}
      td(data-title="'文件名'") {{workflow.actReProcdef.resourceName_}}
      td(data-title="'部署版本'") {{workflow.actReProcdef.version_}}
      td(data-title="'服务目录'") {{workflow.serviceItem.name}}
      td(data-title="'部署时间'") {{workflow.createdAt|date : 'yyyy-MM-dd hh:mm:ss'}}
