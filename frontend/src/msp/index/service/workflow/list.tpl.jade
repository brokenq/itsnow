      td(style="text-align: center" data-title="'部署时间'") {{workflow.createdAt|date : 'yyyy-MM-dd hh:mm:ss'}}

script(type="text/ng-template")#ngTableCheckboxHeader
  +select_all()
script(type="text/ng-template")#customPager
  ul.pager.ng-cloak
    +page_navs()
    li
      .btn-group
        +page_size_button(5)
        +page_size_button(10)
        +page_size_button(25)
        +page_size_button(50)
        +page_size_button(100)