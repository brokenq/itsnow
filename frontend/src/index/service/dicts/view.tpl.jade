include /lib/mixins/form
mixin blocks(title)
  h2 #{title}
  hr
  block
mixin formGroup()
  .form-group
    .col-md-12
      block
mixin label(title)
  label.control-label.col-md-2 #{title}:
  .col-md-8
    block
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  div(class!=attributes["class"])
    input.form-control(type="text", ng-model="#{value}", readonly)
.form-horizontal
  +blocks("字典详情")
    +formGroup()
      +formField("代码", "dict.code")(class="col-md-3")
      +formField("名称", "dict.name")(class="col-md-3")
    +formGroup()
      +formField("显示名", "dict.label")(class="col-md-3")
      +formField("创建时间", "dict.createdAtFMT")(class="col-md-3")
    +formGroup()
      +label('字典描述')
        textarea.form-control(rows='4',ng-model="dict.description",readonly)
  +section("字典项信息")
    #editcontent
      #create1.form-group.has-info
        +dictName("名称")(ng-model="dict.details[0].key",readonly)
        +dictValue("值")(ng-model="dict.details[0].value",readonly)
      script(src='/lib/mixins/dictView.js')

