mixin blocks(title)
  h2 #{title}
  hr
  block
mixin formGroup()
  .form-group
    .col-md-12
      block
mixin label(title)
  label.control-label.col-md-2 #{title}:
  .col-md-8
    block
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  div(class!=attributes["class"])
    input.form-control(type="text", value="#{value}", readonly)
mixin tableForm(id,title,brief,itemId,createTime,description)
  tr
    td #{id}
    td #{title}
    td #{brief}
    td #{itemId}
    td #{createTime}
    td #{description}

.form-horizontal
  +blocks("合同详情")
    +formGroup()
      +formField("MSU账户", "{{contract.msuAccount.name}}")(class="col-md-3")
      +formField("MSP账户", "{{contract.mspAccount.name}}")(class="col-md-3")
    +formGroup()
      +formField("SN", "{{contract.sn}}")(class="col-md-3")
      +formField("注册时间", "{{contract.createdAt | formatTime}}")(class="col-md-3")
    +formGroup()
      +formField("MSU状态", "{{contract.msuStatus}}")(class="col-md-3")
      +formField("MSP状态", "{{contract.mspStatus}}")(class="col-md-3")
    hr
    .col-md-offset-1.col-md-10
      table.table.table-striped.table-bordered.table-hover
        tr
          th(class="thNo") 合同名称
          th(class="thNo") 合同简介
          th(class="thNo") 注册时间
          th(class="con") 合同描述
        tr(ng-repeat="detail in contract.details")
          td {{detail.title}}
          td {{detail.brief}}
          td {{detail.createdAt | formatTime}}
          td {{detail.description}}
































