mixin blocks(title)
  h2 #{title}
  hr
  block
mixin formGroup()
  .form-group
    .col-md-offset-2.col-md-8
      block
mixin label(title)
  label.control-label.col-md-2 #{title}:
  .col-md-8
    block
mixin progressBar(capacity, processPercent, schemaPercent)
  .progress
    .progress-bar.progress-bar-success.progress-bar-striped.active(style="width: #{processPercent}%") #{processPercent}%
    .progress-bar.progress-bar-info.progress-bar-striped.active(style="width: #{schemaPercent}%") #{schemaPercent}%
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  div(class!=attributes["class"])
    input.form-control(type="text", value="#{value}", readonly)

.form-horizontal(ui-view ng-controller='egCtrl')
  +blocks("数据库信息")
    +formGroup()
      +formField("数据库名称", "xxxx")(class="col-md-8")
    +formGroup()
      +formField("数据库用户名", "xxxx")(class="col-md-3")
      +formField("数据库密码", "xxxx")(class="col-md-3")
    +formGroup()
      +label('数据库描述')
        textarea.form-control(rows='4',readonly)

  +blocks("主机信息")
    +formGroup()
      +formField("主机名", "xxxx")(class="col-md-3")
      +formField("主机地址", "xxxx")(class="col-md-3")
    +formGroup()
      +formField("主机类型", "xxxx")(class="col-md-3")
      +formField("主机状态", "xxxx")(class="col-md-3")
    +formGroup()
      +label('主机使用率')
        +progressBar("{{host.capacity}}", "60", "40")

    +blocks("进程信息")
      +formGroup()
        +formField("进程名称", "xxxx")(class="col-md-3")
        +formField("进程状态", "xxxx")(class="col-md-3")

































