mixin blocks(title)
  h2 #{title}
  hr
  block
mixin formGroup()
  .form-group
    .col-md-offset-2.col-md-8
      block
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  .col-md-3
    input.form-control(type="text", ng-model="#{value}", readonly)
mixin label(title)
  label.control-label.col-md-2 #{title}:
  .col-md-8
    block
mixin tableForm(name,description)
  tr
    td #{name}
    td #{description}

mixin button(href,num)
  li
    a(href="#{href}") #{num}
mixin table()
  table.table.table-striped.table-bordered.table-condensed
    +tR('名称', '描述')
    block
mixin tR(name,description)
  tr
    th #{name}
    th #{description}

