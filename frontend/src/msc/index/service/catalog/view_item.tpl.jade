mixin blocks(title)
  h2 #{title}
  hr
  block
mixin tableForm(id,title,brief,itemId,createTime,description)
  tr
    td
      img(ng-src="#{id}")
    td #{title}
    td #{brief}
    td #{itemId}
    td #{createTime}
    td #{description}
mixin formGroup()
  .form-group
    .col-md-offset-2.col-md-8
      block
mixin label(title)
  label.control-label.col-md-2 #{title}:
  .col-md-8
    block
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  div(class!=attributes["class"])
    input.form-control(type="text", ng-model="#{value}", readonly)
mixin tables(icon,name,title,level,time,description)
  .col-md-offset-1.col-md-10
    table.table.table-striped.table-bordered.table-hover
      tr
        th #{icon}
        th #{name}
        th #{title}
        th #{level}
        th #{time}
        th(class="conth") #{description}
      block
.form-horizontal
  +blocks("子目录详情")
    +tables('图标', '名称', '标题', 'brief' , '创建时间', '描述')
      +tableForm('{{item.icon}}', '{{item.sn}}', '{{item.title}}', '{{item.brief}}','{{item.createdAt | formatTime}}','{{item.description}}')











