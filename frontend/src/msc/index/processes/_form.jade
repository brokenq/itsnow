    readonly : true | false
+section("分配服务进程")
  +group("process", "accountId", "所属企业", "star", "所属企业名称")
    +input("account", "sn")(readonly=readonly, required="true", class="remove-form-control", ng-model-options="{ updateOn: 'change' }")
