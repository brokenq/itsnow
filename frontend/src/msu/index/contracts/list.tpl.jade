include /lib/mixins/list

.datalist
  +toolbar
    +button_group
      +tool_button("contractsTable.reload()", "refresh", "", "*", "", "")
    +button_group
      +tool_button("actionService.gotoState('contracts.new')", "plus", "新增", "*", "", "")
      +tool_button("actionService.perform(approve)", "approve", "批准", "1+", "", "")
      +tool_button("actionService.perform(reject)", "reject", "拒绝", "1+", "", "")

  +page_table("contractsTable","selection")
    +row("contract", "sn", "selection")
      td(data-title="'名称'")
        a(ui-sref="contracts.view(contract)") {{contract.sn}}
      td(data-title="'状态'") {{contract.msuStatus | formatContractStatus}}
      td(data-title="'服务商'") {{contract.mspAccount.name || '无'}}
      td(data-title="'创建时间'") {{contract.createdAt | formatTime}}
      td(data-title="'更新时间'") {{contract.updatedAt | formatTime}}