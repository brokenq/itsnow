include /lib/mixins/form.jade
mixin blocks(title)
  h2 #{title}
  hr
  block
mixin formGroup()
  .form-group
    .col-md-offset-2.col-md-8
      block
mixin label(title)
  label.control-label.col-md-2 #{title}:
  .col-md-8
    block
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  div(class!=attributes["class"])
    input.form-control(type="text", ng-model="#{value}", readonly)
.form-horizontal
  +blocks("字典详情")
    +formGroup()
      +formField("代码", "dict.code")(class="col-md-3")
      +formField("名称", "dict.name")(class="col-md-3")
    +formGroup()
      +formField("显示名", "dict.label")(class="col-md-3")
      +formField("创建时间", "dict.createdAt | formatTime")(class="col-md-3")
    +formGroup()
      +label('字典描述')
        textarea.form-control(rows='4',ng-model="dict.description",readonly)
+action_bar
  +action_submit("返回")(ui-sref="dicts.list")

