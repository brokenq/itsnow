mixin blocks(title)
  h2 #{title}
  hr
  block
mixin formGroup()
  .form-group
    .col-md-12
      block
mixin label(title)
  label.control-label.col-md-2 #{title}:
  div(class!=attributes["class"])
    block
mixin formField(label, value)
  label.control-label.col-md-2 #{label}:
  div(class!=attributes["class"])
    input.form-control(type="text", ng-model="#{value}", readonly)
mixin tableForm(auth)
  tr(ng-repeat="user in group.users")
    td #{auth}
mixin tableForms(auth)
  tr
    td #{auth}
.form-horizontal
  +blocks("组详情")
    +formGroup()
      +formField("SN", "group.sn")(class="col-md-3")
      +formField("组名称", "group.name")(class="col-md-3")
    +formGroup()
      +formField("创建时间", "group.createdAt | formatTime")(class="col-md-3")
      +formField("更新时间", "group.updatedAt | formatTime")(class="col-md-3")
    +formGroup()
      +label('组描述')(class="col-md-8")
        textarea.form-control(rows='4',ng-model="group.description",readonly)
    +formGroup()
      +label('用户')(class="col-md-8")
        table.table.table-striped.table-bordered.table-condensed
          tr
            th 用户名
          +tableForm('{{user.name}}')
