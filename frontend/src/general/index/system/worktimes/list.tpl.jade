include /lib/mixins/list

.datalist
  +toolbar
    +button_group
      +tool_button("worktimesTable.reload()", "refresh", "", "*", "", "")
    +button_group
      +tool_button("actionService.gotoState('worktimes.new', $event)", "plus", "新增", "*", "", "")
      +tool_button("actionService.gotoState('worktimes.edit', $event)", "pencil", "修改", "1", "", "editable")
    +more_buttons
      +drop_button("actionService.perform(destroy, $event)", "trash", "删除", "1+", "", "deletable")

  +page_table("worktimesTable","selection")
    +row("worktime", "sn", "selection")(class="editable deletable")
      td(data-title="'工作日'")  {{worktime.name}}
      td(data-title="'起始时间'") {{worktime.startAt}}
      td(data-title="'结束时间'")  {{worktime.endAt}}
      td(data-title="'描述'")   {{worktime.description}}