<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dnt.itsnow.demo.repository.MsuIncidentRepository">
    <select id="findAllByInstanceIds" resultType="MsuIncident">
        <bind name="pattern" value="'%' + keyword + '%' "/>
        SELECT * FROM demo_incidents
        WHERE (instance_id IN
        <foreach item="item" index="index" collection="ids"
                 open="(" separator="," close=")">
            #{item}
        </foreach>)
        <if test="keyword != ''">
            AND ((requester_name LIKE #{pattern})
            OR (request_description LIKE #{pattern})
            OR (status LIKE #{pattern}))
        </if>
        <if test="pageable.sort != null">
            ORDER BY #{pageable.sort}
        </if>
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="pageable.offset > 0">#{pageable.offset}</if>
            <if test="pageable.pageSize > 0">, #{pageable.pageSize}</if>
        </trim>
    </select>

</mapper>
