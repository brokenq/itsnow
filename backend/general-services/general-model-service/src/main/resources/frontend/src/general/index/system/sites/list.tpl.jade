include /lib/mixins/list

.datalist
  +toolbar
    +button_group
      +tool_button("sitesTable.reload()", "refresh", "", "*", "", "")
    +button_group
      +tool_button("actionService.gotoState('sites.new', $event)", "plus", "新增", "*", "", "")
      +tool_button("actionService.gotoState('sites.edit', $event)", "pencil", "修改", "1", "", "editable")
    +more_buttons
      +drop_button("actionService.perform(destroy, $event)", "trash", "删除", "1+", "", "deletable")

  +page_table("sitesTable","selectionService")
    +row("site", "sn", "selectionService")(class="editable deletable")
      td(data-title="'地点名称'")
        a(ui-sref="sites.view(site)") {{site.name}}
      td(data-title="'地址'") {{site.address}}
      td(data-title="'区域'") {{site.area | areaFilter:this}}
      td(data-title="'工作时间'")
        a(ui-sref="worktimes.view(site.workTime)") {{ site.workTime.startAt}} - {{ site.workTime.endAt}}
      td(data-title="'描述'") {{site.description}}
