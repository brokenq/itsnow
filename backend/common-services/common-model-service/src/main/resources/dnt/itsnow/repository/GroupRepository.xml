<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dnt.itsnow.repository.GroupRepository">

    <resultMap id="groupResult" type="Group" autoMapping="true">
        <id property="id" column="id"/>
        <result property="name" column="group_name"/>
        <collection property="users" column="group_name" ofType="User" select="selectUser" />
    </resultMap>

    <resultMap id="userResult" type="User" autoMapping="true">
        <id property="id" column="id"/>
    </resultMap>

    <select id="selectUser" resultMap="userResult">
        SELECT u.*
        FROM   group_members gm
               LEFT JOIN itsnow_msc.users u
                      ON u.username = gm.username
        WHERE #{group_name} = gm.group_name
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(0) FROM groups
        <where>
            <if test="keyword != null and keyword != ''">
                <bind name="pattern" value="'%' + keyword + '%' "/>
                name LIKE #{pattern}
            </if>
        </where>
    </select>

    <sql id="select">
        SELECT * FROM groups
    </sql>

    <select id="findByName" resultMap="groupResult">
        <include refid="select"></include>
        WHERE group_name = #{name}
    </select>
    <select id="findAllByUserName" resultMap="groupResult">
        SELECT g.*
        FROM   group_members gu
        LEFT JOIN groups g
        ON gu.group_name = g.group_name
        WHERE #{username} = gu.username
    </select>
    <select id="findAll" resultMap="groupResult">
        <include refid="select"></include>
        <where>
            <if test="keyword != null and keyword != ''">
                <bind name="pattern" value="'%' + keyword + '%' "/>
                group_name LIKE #{pattern}
            </if>
        </where>
        <if test="pageable.sort != null">
            ORDER BY #{pageable.sort}
        </if>
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="pageable.offset > 0">#{pageable.offset}</if>
            <if test="pageable.pageSize > 0">, #{pageable.pageSize}</if>
        </trim>
    </select>

</mapper>
