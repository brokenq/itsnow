<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dnt.itsnow.repository.CommonContractRepository">

    <select id="findAll" resultType="Contract">
        SELECT * FROM itsnow_msc.contracts
        <if test="pageable.sort != null">
            ORDER BY #{pageable.sort}
        </if>
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="pageable.offset > 0">#{pageable.offset}</if>
            <if test="pageable.pageSize > 0">, #{pageable.pageSize}</if>
        </trim>
    </select>

    <select id="findAllByMsuAccountId" resultType="Contract">
        SELECT * FROM itsnow_msc.contracts
        WHERE (msu_account_id = #{msuId})
        <if test="pageable.sort != null">
            ORDER BY #{pageable.sort}
        </if>
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="pageable.offset > 0">#{pageable.offset}</if>
            <if test="pageable.pageSize > 0">, #{pageable.pageSize}</if>
        </trim>
    </select>

    <select id="findAllByMspAccountId" resultType="Contract">
        SELECT * FROM itsnow_msc.contracts
        <where>
            msp_account_id = #{mspId}
            <if test="own == false">
                OR msp_account_id is null
            </if>
        </where>
        <if test="pageable.sort != null">
            ORDER BY #{pageable.sort}
        </if>
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="pageable.offset > 0">#{pageable.offset}</if>
            <if test="pageable.pageSize > 0">, #{pageable.pageSize}</if>
        </trim>
    </select>

    <select id="findBySn" resultMap="contractResult">
      SELECT c.* FROM itsnow_msc.contracts c WHERE c.sn = #{sn}
    </select>

    <select id="selectDetails" resultMap="detailResult">
        SELECT d.*
        FROM   itsnow_msc.contracts c
        LEFT JOIN itsnow_msc.contract_details d
        ON c.id = d.contract_id
        WHERE c.id = #{id}
    </select>

    <resultMap id="contractResult" type="Contract" autoMapping="true">
        <id property="id" column="id"/>
        <collection property="details" ofType="ContractDetail" column="id" select="selectDetails"/>
    </resultMap>

    <resultMap id="detailResult" type="ContractDetail" autoMapping="true">
        <id property="id" column="id"/>
    </resultMap>

</mapper>
