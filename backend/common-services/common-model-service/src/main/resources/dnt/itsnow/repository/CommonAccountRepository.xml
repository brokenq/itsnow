<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--不要用 type != '*' 这种， mybatis 会根据 '*' 认为 type 为 long类型，而后无法解析-->
<mapper namespace="dnt.itsnow.repository.CommonAccountRepository">

    <resultMap id="accountResult" type="Account" autoMapping="true">
        <discriminator column="type" javaType="string">
            <case value="msc" resultType="MscAccount" resultMap="basicAccountResult"/>
            <case value="msu" resultType="MsuAccount" resultMap="basicAccountResult"/>
            <case value="msp" resultType="MspAccount" resultMap="basicAccountResult"/>
        </discriminator>
    </resultMap>
    <resultMap id="basicAccountResult" type="Account" autoMapping="true">
        <result column="user_id" property="userId"/>
    </resultMap>
</mapper>
