<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dnt.itsnow.repository.MscRoleRepository">

    <resultMap id="roleResult" type="Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <!-- 一对多关系 -->
        <collection property="details" ofType="RoleDetail">
            <result property="accountName" column="accountName"/>
            <result property="username" column="username"/>
        </collection>
    </resultMap>

    <select id="countByRelevantInfo" parameterType="string" resultType="int">
        SELECT Count(*)
        FROM   roles r
               LEFT JOIN authorities a
                      ON r.name = a.authority
               LEFT JOIN users u
                      ON a.username = u.username
               LEFT JOIN accounts acc
                      ON u.account_id = acc.id
        WHERE r.name = #{name}
    </select>

    <select id="findAllRelevantInfo" parameterType="string" resultMap="roleResult">
        SELECT r.id,
               r.name,
               r.description,
               r.created_at,
               r.updated_at,
               u.username,
               acc.name accountName
        FROM   roles r
               LEFT JOIN authorities a
                      ON r.name = a.authority
               LEFT JOIN users u
                      ON a.username = u.username
               LEFT JOIN accounts acc
                      ON u.account_id = acc.id
        WHERE r.name = #{name}
        ORDER BY ${sort} ${dir} limit #{offset}, #{size}
    </select>

</mapper>
