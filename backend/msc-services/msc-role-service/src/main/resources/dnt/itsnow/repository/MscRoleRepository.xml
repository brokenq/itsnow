    <resultMap id="roleResult" type="Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <!-- 一对多关系 -->
        <collection property="details" ofType="RoleDetail">
            <result property="accountName" column="accountName"/>
            <result property="username" column="username"/>
            <result property="deptName" column="deptName"/>
            <result property="siteName" column="siteName"/>
        </collection>
    </resultMap>

    <select id="countByRelevantInfo" parameterType="string" resultType="int">
        select count(*) from roles r
        left join authorities a on r.name = a.authority
        left join users u on u.username = a.username
        where r.name like #{keyword}
    </select>

    <select id="findAllRelevantInfo" parameterType="string" resultMap="roleResult">
        select r.id, r.name, r.description, r.created_at, r.updated_at,
        u.id as userId, u.username as userName,
        acc.name as accountName
        from roles r
        left join authorities a on r.name = a.authority
        left join users u on u.username = a.username
        left join accounts acc on acc.user_id = u.id
        where r.name like #{keyword}
        order by ${sort} ${dir} limit #{offset}, #{size}
    </select>

</mapper>
