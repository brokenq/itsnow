<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dnt.itsnow.repository.PublicServiceItemRepository">
    <delete id="deleteByAccount">
        DELETE FROM itsnow_msc.account_service_items WHERE account_id = #{accountId}
        <if test="!ids.isEmpty()">
            and item_id IN
            <foreach item="item" index="index" collection="ids"
                     open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </delete>
</mapper>

